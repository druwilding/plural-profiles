<% content_for(:title) { "Home — Plural Profiles" } %>

<h1>Welcome!</h1>

<% unless Current.user.email_verified? %>
  <div class="flash flash--warning">
    ⚠️ Your email is not yet verified. Please check your inbox.
  </div>
<% end %>

<% profile_count = Current.user.profiles.count %>
<% group_count = Current.user.groups.count %>

<div class="card">
  <h2>At a glance</h2>

  <% if profile_count.zero? && group_count.zero? %>
    <p>
      You haven't created anything yet, and that's okay!
    </p>
  <% else %>
    <p>
      You currently have
      <strong><%= link_to pluralize(group_count, "group"), our_groups_path %></strong>
      and
      <strong><%= link_to pluralize(profile_count, "profile"), our_profiles_path %></strong>.
    </p>
  <% end %>
  <p>
    You can 
    <ul>
      <li><%= link_to "Create a group", new_our_group_path %></li>
      <li><%= link_to "Create a profile", new_our_profile_path %></li>
    </ul>
  </p>
</div>

<%= render "shared/about" %>
