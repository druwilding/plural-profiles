<h1>Welcome!</h1>

<% unless Current.user.email_verified? %>
  <div class="flash flash--warning">
    ⚠️ Your email is not yet verified. Please check your inbox.
  </div>
<% end %>

<div class="dashboard-grid">
  <div class="card">
    <h2>Our Profiles</h2>
    <p class="text-muted"><%= pluralize(Current.user.profiles.count, "profile") %></p>
    <p>
      <%= link_to "View profiles", our_profiles_path, class: "btn" %>
      <%= link_to "New profile", new_our_profile_path, class: "btn btn--secondary" %>
    </p>
  </div>

  <div class="card">
    <h2>Our Groups</h2>
    <p class="text-muted"><%= pluralize(Current.user.groups.count, "group") %></p>
    <p>
      <%= link_to "View groups", our_groups_path, class: "btn" %>
      <%= link_to "New group", new_our_group_path, class: "btn btn--secondary" %>
    </p>
  </div>
</div>
