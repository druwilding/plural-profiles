<% if group.errors.any? %>
  <div class="error-messages">
    <% group.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
<% end %>

<%= form_with model: group, url: group.persisted? ? our_group_path(group) : our_groups_path do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, required: true, autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: "Describe this group..." %>
  </div>

  <div class="form-group">
    <%= form.submit group.persisted? ? "Update group" : "Create group" %>
  </div>
<% end %>
