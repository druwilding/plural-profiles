- content_for(:title) { "Our profiles â€” Plural Profiles" }

%h1 Our profiles

- if @profiles.any?
  .card-list
    - @profiles.each do |profile|
      .card
        .card__header
          - if profile.avatar.attached?
            = image_tag profile.avatar.variant(resize_to_fill: [48, 48]), class: "avatar avatar--small", width: 48, height: 48, alt: profile.avatar_alt_text.presence || "", loading: "lazy"
          - else
            .avatar.avatar--small.avatar--placeholder
              = render "shared/plural_pride_logo"
          %div
            %h2= link_to profile.name, our_profile_path(profile)
            - if profile.pronouns.present?
              %span.pronouns= profile.pronouns
- else
  .card
    %p You haven't created any profiles yet.
